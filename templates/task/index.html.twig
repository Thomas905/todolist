{% extends 'base.html.twig' %}

{% block body %}
    <h1>Mes tâches</h1>
    <a href="{{ path('task_new') }}">Ajouter une tâche</a>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Statut</th>
                <th scope="col">Date de fin</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for task in tasks %}
                <tr>
                    <th scope="row"><img src="{{ asset('uploads/' ~ task.photo ) }}" alt="">{{ task.id }}</th>
                    <td>{{ task.name }} <br> {{ task.description }}</td>
                    <td>{{ task.status }}</td>
                    <td>{{ task.endDate|date('d/m/y') }}</td>
                    <td>
                        <a href="{{ path('task_edit', {'id': task.id}) }}"><i class="fa-solid fa-pen"></i></a>
                        <a href="{{ path('task_delete', {'id': task.id}) }}"><i class="fa-solid fa-trash text-danger"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
{% endblock %}